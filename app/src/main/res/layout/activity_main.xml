<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6d68b0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品信息管理"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119" />

    <TextView
        android:id="@+id/tv_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:text="账号:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv" />

    <TextView
        android:id="@+id/tv_main_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="密码:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_name" />

    <EditText
        android:id="@+id/edt_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_main_name"
        app:layout_constraintStart_toEndOf="@+id/tv_main_name" />

    <EditText
        android:id="@+id/edt_main_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_main_password"
        app:layout_constraintStart_toEndOf="@+id/tv_main_password" />

    <Button
        android:id="@+id/btn_main_dl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:background="@android:drawable/progress_horizontal"
        android:text="登录"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_zc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_password" />

    <Button
        android:id="@+id/btn_main_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/progress_horizontal"
        android:text="退出"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_dl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_main_zc" />

    <Button
        android:id="@+id/btn_main_zc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/progress_horizontal"
        android:text="注册"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_main_dl"
        app:layout_constraintEnd_toStartOf="@+id/btn_main_back"
        app:layout_constraintStart_toEndOf="@+id/btn_main_dl" />

</android.support.constraint.ConstraintLayout>